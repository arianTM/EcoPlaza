<Page
    x:Class="Presentacion.pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Presentacion.pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Border
        MaxWidth="500"
        MaxHeight="700"
        Padding="20">
        <materialDesign:Card
            VerticalContentAlignment="Center"
            Background="{StaticResource MaterialDesignPaper}"
            FontFamily="{StaticResource MaterialDesignFont}"
            UniformCornerRadius="5">
            <StackPanel>
                <Image
                    Width="100"
                    Margin="0,10"
                    Source="../images/ecoplaza_logo.jpg" />
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />

                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        FontSize="40"
                        Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                        Text="LOGIN" />
                    <materialDesign:PackIcon
                        Grid.Column="1"
                        Width="45"
                        Height="45"
                        Margin="8,0,0,0"
                        Kind="Login" />
                </Grid>

                <Grid
                    MaxWidth="1000"
                    Margin="10,25,10,0"
                    HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5,10"
                        HorizontalContentAlignment="Right"
                        Content="Nombre de usuario:"
                        FontSize="14" />
                    <TextBox
                        x:Name="txtNombre"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="200"
                        Margin="5,10"
                        FontSize="14"
                        TextChanged="txtNombre_TextChanged" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5,10"
                        HorizontalContentAlignment="Right"
                        Content="Contraseña:"
                        FontSize="14" />
                    <PasswordBox
                        x:Name="txtContra"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="200"
                        Margin="5,10"
                        FontSize="14"
                        PasswordChanged="txtContra_PasswordChanged" />
                </Grid>
                <TextBlock
                    x:Name="tbError"
                    Margin="10,5"
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="Red"
                    Style="{StaticResource MaterialDesignBody1TextBlock}"
                    Text="Error de conexión. Inténtelo de nuevo más tarde." />
                <Button
                    x:Name="btnLogin"
                    Height="46"
                    MinWidth="340"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    Click="btnLogin_Click"
                    Content="INICIAR SESIÓN" />
                <TextBlock
                    Width="Auto"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center">
                    <Hyperlink
                        x:Name="linkRegistrarse"
                        Click="linkRegistrarse_Click"
                        Style="{StaticResource MaterialDesignBody1Hyperlink}">
                        <TextBlock FontSize="12" Text="¿No tienes una cuenta? Regístrate" />
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </materialDesign:Card>
    </Border>
</Page>
