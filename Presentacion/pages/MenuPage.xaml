<Page
    x:Class="Presentacion.pages.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Presentacion.pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MenuPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Border
            BorderBrush="{StaticResource AttentionToActionBrush}"
            BorderThickness="1"
            CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Height="Auto"
                    VerticalAlignment="Top">
                    <Button
                        x:Name="btnUsuario"
                        Height="60"
                        Click="btnUsuario_Click"
                        Style="{StaticResource MaterialDesignFlatDarkBgButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="22"
                                Height="22"
                                Kind="UserCircle" />
                            <TextBlock Margin="5,0" Text="ariantm" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnAgregarSubcontrata"
                        Height="40"
                        VerticalContentAlignment="Center"
                        Click="btnAgregarSubcontrata_Click"
                        Style="{StaticResource MaterialDesignFlatAccentBgButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="AddCircle" />
                            <TextBlock Margin="5,0" Text="Agregar subcontrata" />
                        </StackPanel>
                    </Button>
                    <ListBox
                        x:Name="lbSubcontratas"
                        Margin="6,10"
                        Style="{StaticResource MaterialDesignCardsListBox}">
                        <ListBox.Resources />
                        <ListBoxItem>
                            <Button
                                Click="btnVerSubcontrata_Click"
                                Content="Subcontrata 1"
                                Style="{StaticResource MaterialDesignFlatButton}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button
                                Click="btnVerSubcontrata_Click"
                                Content="Subcontrata 2"
                                Style="{StaticResource MaterialDesignFlatButton}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button
                                Click="btnVerSubcontrata_Click"
                                Content="Subcontrata 3"
                                Style="{StaticResource MaterialDesignFlatButton}" />
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
                <Button
                    x:Name="btnIncidencias"
                    Grid.Row="1"
                    Height="40"
                    Click="btnIncidencias_Click"
                    Content="Incidencias"
                    Style="{StaticResource MaterialDesignOutlinedDarkButton}" />
            </Grid>
        </Border>
        <StackPanel Grid.Column="1">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="Menú principal" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="12"
                Text="*Aquí van los reportes" />
        </StackPanel>
    </Grid>
</Page>
