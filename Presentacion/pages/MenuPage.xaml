<Page
    x:Class="Presentacion.pages.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Presentacion.pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MenuPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Height="Auto"
                VerticalAlignment="Top">
                <Button Content="ariantm" />
                <Button Content="Agregar subcontrata" />
                <StackPanel>
                    <Button Content="Subcontrata 1" />
                    <Button Content="Subcontrata 2" />
                    <Button Content="Subcontrata 3" />
                </StackPanel>
            </StackPanel>
            <Button Grid.Row="1" Content="Incidencias Gestion" />
        </Grid>
        <StackPanel Grid.Column="1">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="Menú principal" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="12"
                Text="*Aquí van los reportes" />
        </StackPanel>
    </Grid>
</Page>
